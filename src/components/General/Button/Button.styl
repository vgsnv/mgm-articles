pd = 4px
colorBack = #f5f5f5
colorFont = #424242

.btn-enabled
  padding 2*pd 3*pd
  margin-right 2*pd
  border colorFont solid 2px
  cursor pointer
  display inline-block
  text-align center
  text-decoration none
  color colorFont
  background colorBack
  font-family sans-serif
  font-size 1em
  &:hover
    color colorBack
    background colorFont
  
.btn-disabled
  padding 2*pd 3*pd
  margin-right 2*pd
  border lighten(colorFont, 40) solid 2px
  display inline-block
  text-align center
  text-decoration none
  color darken(colorFont, 40)
  background darken(colorBack, 40)
  font-family sans-serif
  font-size 1em